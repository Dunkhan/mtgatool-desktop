{
  "name": "mtgatool-desktop",
  "version": "6.0.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "axios": "^0.21.1",
    "cypress": "^8.1.0",
    "date-fns": "^2.19.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-log": "^4.3.2",
    "google-protobuf": "^3.15.6",
    "lodash": "^4.17.21",
    "match-sorter": "^6.3.0",
    "mathjs": "^9.3.0",
    "mtgatool-shared": "^1.1.1",
    "queue": "^6.0.2",
    "random-words": "^1.1.1",
    "react": "^17.0.2",
    "react-autosuggest": "^10.1.0",
    "react-color": "^2.19.3",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-spring": "^8.0.27",
    "react-svg-piechart": "^2.4.2",
    "react-table": "^7.7.0",
    "redux": "^4.0.5",
    "shortid": "^2.2.16",
    "tool-db": "^1.0.12",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "nf start -p 3000",
    "cm": "git-cz",
    "react-start": "node generateInfo.js && craco start",
    "react-build": "craco build",
    "start:web": "craco start --config craco.web.config.js",
    "build:web": "craco build --config craco.web.config.js",
    "jest-server": "http-server ./build -p 3000",
    "jest:watch": "craco test --env=jsdom",
    "jest:ci": "react-scripts test --env=jsdom --watchAll=false --testPathIgnorePatterns \"src/__tests__/\"",
    "jest:ci:watch": "react-scripts test --env=jsdom --testPathIgnorePatterns \"src/__tests__/\"",
    "test:eslint": "eslint src/**",
    "test:all": "npm run test:eslint && npm run jest:ci",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "electron-build": "electron-builder",
    "release": "npm run react-build && electron-builder --publish=always",
    "build:nopublish": "electron-builder",
    "build": "npm run electron-rebuild && npm run react-build && npm run electron-build",
    "electron-rebuild": "electron-rebuild",
    "semantic-release": "semantic-release",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "npx chromatic --project-token=62e160e30516"
  },
  "build": {
    "appId": "com.mtgatool.desktop",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "!**/__tests__/**",
      "!**/__mocks__/**"
    ],
    "win": {
      "target": "NSIS",
      "icon": "public/icons/icon.ico",
      "artifactName": "${productName}.${ext}"
    },
    "mac": {
      "target": "pkg",
      "artifactName": "${productName}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility;",
      "icon": "public/icons/icon-512.png",
      "artifactName": "${productName}.${ext}"
    },
    "extraResources": [
      {
        "from": "./public/extra/",
        "to": "extra",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./public/icons/",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@types/gun": "^0.9.2",
    "@types/jest": "^26.0.15",
    "@types/leveldown": "^4.0.2",
    "@types/lodash": "^4.14.168",
    "@types/mathjs": "^6.0.11",
    "@types/node": "^12.0.0",
    "@types/random-words": "^1.1.0",
    "@types/react": "^17.0.0",
    "@types/react-autosuggest": "^10.1.4",
    "@types/react-color": "^3.0.4",
    "@types/react-dom": "^17.0.0",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-table": "^7.0.29",
    "@types/secp256k1": "^4.0.1",
    "@types/webpack-env": "^1.16.0",
    "chromatic": "^5.9.2",
    "electron": "^13.0.0",
    "electron-builder": "^22.11.7",
    "electron-rebuild": "^2.3.5",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsx": "^0.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "foreman": "^3.0.1",
    "node-sass": "^6.0.1",
    "prettier": "^2.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mtgatool/mtgatool-desktop.git"
  }
}
